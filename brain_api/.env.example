# Brain API Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# HuggingFace Hub
# =============================================================================
# API token for HuggingFace Hub (required for HF storage backend)
HF_TOKEN=

# HuggingFace model repository (e.g., "username/learnfinance-models")
HF_MODEL_REPO=

# HuggingFace news sentiment dataset repository
HF_NEWS_SENTIMENT_REPO=

# HuggingFace twitter sentiment dataset repository
HF_TWITTER_SENTIMENT_REPO=

HF_LSTM_MODEL_REPO="username/learnfinance-lstm"
HF_PATCHTST_MODEL_REPO="username/learnfinance-patchtst"
HF_PPO_LSTM_MODEL_REPO="username/learnfinance-ppo-lstm"
HF_PPO_PATCHTST_MODEL_REPO="username/learnfinance-ppo-patchtst"

# =============================================================================
# Storage Backend
# =============================================================================
# Options: "local" (default) or "hf" (HuggingFace Hub)
STORAGE_BACKEND=local

# =============================================================================
# Alpaca News API
# =============================================================================
# Required for news sentiment backfill via Alpaca
ALPACA_API_KEY=
ALPACA_API_SECRET=

# =============================================================================
# Alpha Vantage API
# =============================================================================
# Required for /signals/fundamentals/historical endpoint
ALPHA_VANTAGE_API_KEY=

# =============================================================================
# Training Configuration (Optional)
# =============================================================================
# Number of years of historical data for training (default: 15)
# LSTM_TRAIN_LOOKBACK_YEARS=15

# Override end date for training window (default: today)
# LSTM_TRAIN_WINDOW_END_DATE=2025-01-01
